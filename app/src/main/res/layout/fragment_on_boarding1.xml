<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Fragments.OnBoarding1">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_weight="607">
      <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="64"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="258"
            android:layout_gravity="center"
            android:src="@drawable/onboaeding1" />

      <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="46"/>
      <TextView
            android:layout_width="wrap_content"
            android:textColor="#00b2ab"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textSize="40sp"
            android:layout_height="0dp"
            android:layout_weight="63"
            android:text="פרטיות וביטחון" />

       <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="35"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="51">
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"/>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="300"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/fbowerd1_avoid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="מניעת התפשטות הקורונה "
                    android:textColor="#454e6c"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="#454e6c"
                    android:textStyle="bold"
                    android:layout_toStartOf="@+id/fbowerd1_avoid"
                    android:textSize="16sp"
                    android:layout_alignParentStart="true"
                    android:layout_height="wrap_content"
                    android:text="המטרה של כולנו " />

            </RelativeLayout>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="24"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="24"
            android:layout_gravity="center"
            android:text="עכשיו תוכלו לסייע באופן אקטיבי"
            android:textSize="16sp"
            android:textColor="#454e6c"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="24"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:text="ובלי חשש לפגיעה בפרטיותכם"
            android:textSize="16sp"
            android:textColor="#454e6c"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"/>
    </LinearLayout>
</LinearLayout>
